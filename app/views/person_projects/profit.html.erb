<div id="sidebar">
  <ul>
    <li>
      <h1>Report Profit</h1>
    </li>
  </ul>
</div>

<div id="contentPage">

  <h2><%= @requested_date.strftime("%B, %Y") %></h2>
  <%= select_date(@requested_date, :prefix => 'date_worked', :start_year => 2005, :end_year => 2015, :discard_day => true, :include_blank => false) %>
  <a href="#" onclick="parent.location='/person_projects/profit/' + $('date_worked_year').value + '-' + $('date_worked_month').value + '-1'">Change</a>
  <br />
  <br />
  
  <% form_for :person_projects, :url => { :action => "update" } do  %>
    <%= hidden_field_tag "requested_date", @requested_date   %>
    <table id="rounded-corner">
      <tr>
        <th class="rounded-top-left"></th>
        <th>Expense</th>
        <% @projects.each do |project| %>
          <th><%= project.name %></th>
        <% end %>
        <th class="rounded-top-right">TOTAL</th>
      </tr>

      <tr>
        <td>Income</td>
        <td></td>
        <% @projects.each do |project| %>
          <td><%= text_field_tag "project_#{project.id}", project.income_between(@from, @to), :size => 5 %></td>
        <% end %>
        <td><%= text_field_tag "project_income_total",  Project.total_income(@from, @to), :size => 5, :style => "background:#E6E6FA;" %></td>
      </tr>

      <% @people.each do |person| %>
        <tr>
          <td><%= person.first_name + " " + person.last_name %></td>
          <td><%= text_field_tag "person_#{person.id}", person.cost_between(@from, @to), :size => 5 %></td>
          <% @projects.each do |project| %>
            <td><%= text_field_tag "person_project_#{person.id}_#{project.id}", PersonProject.percentage_between(@from, @to, person.id, project.id), :size => 5 %></td>
          <% end %>
          <td><%= text_field_tag "subtotal_person_#{person.id}", person.subtotal_person(@from, @to), :size => 5, :style => "background:#FFF8DC;" %></td>
        </tr>
      <% end %>
      <tr>
        <td class="rounded-bottom-left">TOTAL</td>
        <td><%= text_field_tag "person_cots_total",  Person.total_cost(@from, @to), :size => 5, :style => "background:#E6E6FA;" %></td>
        <% @projects.each do |project| %>
          <td><%= text_field_tag "subtotal_project_#{project.id}", project.subtotal_project(@from, @to), :size => 5, :style => "background:#FFF8DC;" %></td>
        <% end %>
        <td class="rounded-bottom-right"><%= text_field_tag "total", Project.total_income(@from, @to) - Person.total_cost(@from, @to), :size => 5, :style => "background:#D3D3D3;" %></td>
      </tr>

    </table>

  <br />
  <%= submit_tag "Save" %>
  <% end %>

</div>


